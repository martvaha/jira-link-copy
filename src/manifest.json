{
  "name": "Jira Link Copy",
  "version": "1.0.1",
  "description": "Extension adds link copy buttons to Jira issues",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png",
    "256": "assets/icon-256.png"
  },
  "permissions": ["https://atlas.elisa.fi/jira/*"],
  "content_scripts": [
    {
      "matches": ["https://atlas.elisa.fi/jira/*"],
      "js": ["jira-copy-link.js"],
      "css": ["jira-copy-link.css"]
    }
  ],
  "manifest_version": 2
}
